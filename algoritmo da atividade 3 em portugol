3°
programa {
  funcao inicio() {
    //Declaração de variáveis
    real n1, n2, n3, n4, media_aritmetica
    //entrada de dados
    escreva("Informe sua primeira nota:" )
    leia(n1)
    escreva("informe sua segunda nota:")
    leia(n2)
    escreva( "informe sua terceira nota:")
    leia(n3)
    escreva( "informe sua quarta nota:")
    leia(n4)
    //processamento
    media_aritmetica=(n1+n2+n3+n4)/4
    //saída de dados
    escreva("então sua média é:",media_aritmetica)
  }
}

4º questão 
programa {
  funcao inicio() {
    //declaração de variáveis 
      real mes1, mes2, mes3, media_aritmetica 
      //Entrada de dados
       Escreva("Informe o gasto em janeiro")
       Leia(mes1)
       Escreva("Informe o gasto em fevereiro")
       Leia(mes2)
       Escreva("Informe o gasto em março")
       Leia(mes3)
      //processamento
          media_aritmetica=(mes1+mes2+mes3)/3
      //Saída de dados
       Escreva("a media geral de gasto é: ", Media_aritmetica)
  }
}


5º questão 
programa {
  funcao inicio() {
   //declaração de variáveis 
   real altura, peso_ideal
   //declaração de constantes 
   Const real K=72.7
   Const inteiro B=58
   //ENTRADA DE DADOS
   Escreva("Informe seus dados: ")
   Leia(altura)
   //processamento
   peso_ideal=(K*altura)-B
   //saída de dados
   Escreva("Seu peso ideal deve ser: ", peso_ideal) 
  }
}









